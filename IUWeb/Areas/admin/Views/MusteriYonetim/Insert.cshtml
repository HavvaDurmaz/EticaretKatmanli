<h2 style="margin-top:15px;margin-bottom:15px;">MÜŞTERİ YÖNETİMİ</h2>

<a href="/admin/MusteriYonetim" class="btn btn-primary" style="margin-top:15px;">Geri Git</a>

<form action="/admin/MusteriYonetim/Update/@Model.Id" method="post" style="margin-bottom:15px;">



    <input type="text" class="form-control" style="margin-bottom:15px;" name="NameSurName" placeholder="Ad Soyad" value="@Model.NameSurName" />

    <input type="text" class="form-control" style="margin-bottom:15px;" name="Email" placeholder="Email" value="@Model.Email" />

    <input type="text" class="form-control" style="margin-bottom:15px;" name="Phone" placeholder="telefon" value="@Model.Phone" />

    <input type="text" class="form-control" style="margin-bottom:15px;" name="passwords" value="@Model.Passwords" />


    <select name="Status" class="form-control" style="margin-bottom:15px;">
        @if (Model.Status == true)
        {
            <option value="True">Aktif</option>
            <option value="False">Pasif</option>
        }
        else
        {
            <option value="False">Pasif</option>
            <option value="True">Aktif</option>
        }
    </select>

    <select name="Roles" class="form-control" style="margin-bottom:15px;">

        @if (Model.Roles == "admin")
        {
            <option value="admin">admin</option>
            <option value="SatisTemsilcisi">SatisTemsilcisi</option>
            <option value="user">user</option>
        }
        else if (Model.Roles == "user")
        {
            <option value="user">user</option>
            <option value="SatisTemsilcisi">SatisTemsilcisi</option>
            <option value="admin">Admin</option>
        }
        else
        {
            <option value="SatisTemsilcisi">SatisTemsilcisi</option>
            <option value="admin">admin</option>
            <option value="user">user</option>
        }
    </select>

    <button type="submit" class="btn btn-primary"> Kaydet</button>
</form>


@if (ViewBag.Message != null)
{
    <div style="margin-top:15px;">@Html.Raw(ViewBag.Message)</div>
}