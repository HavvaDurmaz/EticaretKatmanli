<h2 style="margin-bottom:15px;margin-top:15px;">MÜŞTERİ YÖNETİMİ</h2>

<a href="/admin/MusteriYonetim/Insert" class="btn btn-primary" style="margin-bottom:15px;">Yeni Ekle</a>

<table class="table table-bordered" style="margin-bottom:15px;">

    <thead>
        <tr>
            <td>id</td>
            <td>Ad Soyad</td>
            <td>Email</td>
            <td>Telefon</td>
            <td>İşlemler</td>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.NameSurName</td>
                <td>@item.Email</td>
                <td>@item.Phone</td>
                <td>
                    <a href="/admin/MusteriYonetim/Update/@item.Id" class="btn btn-primary">Güncelle</a>
                    <a href="/admin/MusteriYonetim/Delete/@item.Id" class="btn btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>