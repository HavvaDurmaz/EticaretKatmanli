@{
    decimal toplam = 0;
}
<div class="col-md-12" style="margin-top:25px;">
    <div class="row">
        <div class="col-md-9">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <td>#</td>
                        <td>Ürün</td>
                        <td>Adet</td>
                        <td>Birim Fiyat</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        toplam += item.Piece * item.Price;
                        <tr>
                            <td style="text-align:center"><img src="/images/@item.ImagesHome" width="50" /></td>
                            <td style="vertical-align:middle;text-align:center">@item.ProductName</td>
                            <td style="vertical-align:middle; text-align: center">
                                <button type="button" class="btn btn-primary" onclick="AdetKontrol(@item.Id,false)" style="margin-right:5px;">-</button>
                                @item.Piece
                                <button type="button" onclick="AdetKontrol(@item.Id, true)" class="btn btn-primary" style="margin-left:5px;">+</button>
                            </td>
                            <td style="vertical-align: middle; text-align: center">@item.Price</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="col-md-3">
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <td style="padding:15px;font-weight:bold;">Toplam Fiyat : </td>
                        <td style="padding: 15px; font-weight: bold;">@toplam.ToString("C")</td>
                    </tr>
                    <tr>
                        <td colspan="2"><a href="/Odeme" class="btn btn-success form-control">Ödeme Yap</a></td>
                    </tr>
                    <tr>
                        <td colspan="2"><a href="/" class="btn btn-dark form-control">Alışverişe Devam Et</a></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>