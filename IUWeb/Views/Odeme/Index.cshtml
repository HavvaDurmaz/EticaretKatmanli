@{
    decimal toplam = 0;
}<form action="/Odeme/Odeme" method="post">    <div class="col-md-12">        <div class="row">            <div class="col-md-9">                <h4>Teslimat / Fatura Adresi</h4>                <input type="text" name="AddressName" placeholder="Adresinize Bir İsim Verin : " class="form-control" style="margin-bottom:10px" />                <input type="text" name="City" placeholder="Şehriniz : " class="form-control" style="margin-bottom:15px" />                <input type="text" name="District" placeholder="İlçeniz : " class="form-control" style="margin-bottom:15px" />                <input type="text" name="FullAddress" placeholder="Tam Adresiniz :" class="form-control" style="margin-bottom:15px" />                <select name="OdemeTipi" class="form-control">                    <option value="Kredi Kartı İle Ödeme">Kredi Kartı İle Ödeme</option>                    <option value="Havale İle Ödeme">Havale İle Ödeme</option>                </select>            </div>            <div class="col-md-3">                <div class="row">                    <h3>Sepetteki Ürünler</h3>                    @foreach (var item in Model)
                    {
                        toplam += item.Piece * item.Price;                        <table class="table table-bordered" style="margin-top:2px">                            <tbody>                                <tr>                                    <td>Ürün : </td>                                    <td style="vertical-align:middle;text-align:center">@item.ProductName</td>                                </tr>                                <tr>                                    <td>Adet : </td>                                    <td style="vertical-align:middle; text-align: center">@item.Piece</td>                                </tr>                                <tr>                                    <td>Birim Fiyat : </td>                                    <td style="vertical-align: middle; text-align: center">@item.Price</td>                                </tr>                            </tbody>                        </table>                    }                    <table class="table table-dark" style="margin-top:2px">                        <thead>                            <tr>                                <td>Ödenecek Tutar : </td>                                <td style="vertical-align:middle;text-align:center;font-size:18px">@toplam.ToString("N") TL</td>                            </tr>                        </thead>                    </table>                    <button type="submit" class="btn btn-success form-control">Siparişi Tamamla</button>                </div>            </div>        </div>    </div></form>